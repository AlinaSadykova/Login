@{
    ViewData["Title"] = "Home Page";
}
@model Login.Models.User
<div class="logreg">
<h1>Register</h1>
<form asp-action="processregistration" asp-controller="Home" method="POST">
    <br>
    <span asp-validation-for="firstname"></span>
    <input asp-for="firstname" placeholder="First name"><br>
    <br>
    <span asp-validation-for="lastname"></span>
    <input asp-for="lastname" placeholder="Last name"><br>
    <br>
    
    <span asp-validation-for="email"></span>
